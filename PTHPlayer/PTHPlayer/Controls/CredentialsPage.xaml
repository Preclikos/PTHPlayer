<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:playerComponents="clr-namespace:PTHPlayer.Components"
             x:Class="PTHPlayer.Controls.CredentialsPage">
    <ContentPage.Content>
        <StackLayout Grid.Column="1" Grid.Row="1">
            <Label Text="Server:" />
                <Entry x:Name="Server" Completed="Port_Completed"/>
            <Label Text="Port:" />
                <Entry x:Name="Port" Completed="Port_Completed"/>
            <Label Text="Username:" />
            <StackLayout>
                <Entry x:Name="UserName" Completed="Port_Completed"/>
            </StackLayout>
            <Label Text="Password"/>
            <Entry IsPassword="True" x:Name="Password" Completed="Port_Completed"/>
            <playerComponents:PlayerButton x:Name="ConfirmButton" Text="Confirm" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>